@model WeatherModel

@{
    ViewBag.Title = "Weather App";
    if (Model != null)
    {
        ViewBag.Title = Model.CityName + " | " + ViewBag.Title;
    }
}

@if (Model != null)
{
    <div class="box cursor-pointer w-30 margin-auto margin-top-200">
        <div class="flex-borderless">
            <div class="w-50">
                <h2>@Model.CityName</h2>
                <h4 class="text-dark-grey">@Model.DateAndTime.ToString("hh:mm tt")</h4>

            </div>
            <div class="w-50 border-left">
                <h1 class="margin-left">@Model.Temperature <sup class="text-grey">&#8457</sup></h1>
            </div>
        </div>
    </div>
    <div class="text-center">
        <a href="~/">Back to homepage</a>
    </div>
}
else{
    <div class="text-center">Invalid City Code</div>
}